{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  
  "Limits": {
    "MaxRequestBodySize": 16384,
    "MaxConcurrentConnections": 100,
    "MinRequestBodyDataRate": {
      "BytesPerSecond": 512.0,
      "GracePeriod": "00:01:00"
    },
    "MinResponseDataRate": {
      "BytesPerSecond": 512.0,
      "GracePeriod": "00:01:00"
    }
  },

  "Kestrel": {

    "EndPoints": {
      "Http": {
        "Url": "http://localhost:8000"
      },

      "HttpsDefaultCert": {
        "Url": "https://localhost:4333"
      },

      "Https": {
        "Url": "https://*:5504",
        "Certificate": {
          "Path": "<path to .pfx file>",
          "Password": "<certificate password>"
        }
      }
    },

    "Certificates": {
      "Default": {
        "Path": "<path to .pfx file>",
        "Password": "<certificate password>"
      }
    }

  }
}